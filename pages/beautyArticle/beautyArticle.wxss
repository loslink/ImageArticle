
.root {
  display: flex;
  position: relative;
  background-color: #f5f5f5;
}

.background{
  width: 100%;
  height: 100%;
  position: fixed;
}

.rootContainer {
  display: flex;
  flex-direction: column;
}

.headContainer {
  width: 694rpx;
  height: 297rpx;
  margin: 28rpx;
  position: relative;
}

.head {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}

.headBg {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.title {
  color: #fff;
  font-size: 48rpx;
  margin-top: 26rpx;
  font-weight: bold;
  text-shadow:1rpx 1rpx 2rpx #5c5b5b;
}

.date {
  color: #323232;
  font-size: 30rpx;
  margin-top: 16rpx;
  font-weight: bold;
}

.week {
  color: #323232;
  font-size: 30rpx;
  margin-top: 16rpx;
  font-weight: bold;
}

.image {
  background-color: #333;
  width: 678rpx;
  height: 404rpx;
  margin: 8rpx;
  /* border-radius: 10rpx; */
}

.itemContainer {
  width: 694rpx;
  height: 420rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-bottom: 24rpx;
  border-radius: 10rpx;
  position: relative;
  background-color: white;
  box-shadow:1rpx 1rpx 3rpx #b3b1b1;

  display:flex;     
  justify-content: center; /*水平居中*/
  /* align-items:center;  */
}

.itemText {
  width: 630rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  padding-left: 25rpx;
  padding-bottom: 10rpx;
  padding-right: 25rpx;
  padding-top: 20rpx;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  /* background-color: #000000;
  opacity:0.5;  */
  background:rgba(0,0,0,0.5); 
  /* border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx; */
  

  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 8rpx;
  margin-bottom: 10rpx;
}

.playIcon {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  margin-top: 120rpx;
}


.hot {
  width: 140rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
  margin-top: 4rpx;
}


.flowerBorder {
  width: 678rpx;
  height: 404rpx;
  position: absolute;
  margin: 8rpx;
  left: 0;
  top: 0;
}

.tips{
  width: 270rpx;
  height: 80rpx;
  position: fixed;
  right: 0;
  margin-right: 15rpx;
}
