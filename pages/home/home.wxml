  <block wx:for-items="{{articleList}}" wx:key="{{item.id}}">

    <view class='itemContainer'>
      <image bindtap="itemTap" data-index="{{index}}" class="image" src="{{item.coverUrl}}">
      </image>
      <text class='itemText'>{{item.title}}</text>
      <image class='playIcon' src='../../image/ic_play.png'>
      </image>
    </view>

  </block>

</view>