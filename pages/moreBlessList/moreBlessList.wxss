/* pages/bless/bless.wxss */
/* @import "../home/home.wxss"; */
.root {
  display: flex;
  position: relative;
  background-color: white;
}


.rootContainer {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.jingxuanBlock {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 20rpx;
  align-items: center
}

.title {
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  color: #000;
  font-size: 36rpx;
}

.more {
  margin-top: 30rpx;
  margin-right: 25rpx;
  color: #646464;
  font-size: 24rpx;
  position: absolute;
  right: 0;
}

.rowBlock {
  display: flex;
  flex-direction: row;
  /* margin-top: 20rpx; */
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  /* margin-top: 20rpx; */
}


.image {
  background-color: transparent;
  width: 320rpx;
  height: 240rpx;
  margin-left:20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.itemText {
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  color: #323232;
  font-size: 24rpx;
}

.hot {
  width: 140rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
  margin-top: -3rpx;
  margin-right: 20rpx;
}

.articlesContainer {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  align-items: center
}


.imageArticle {
  background-color: #333;
  width: 678rpx;
  height: 404rpx;
  margin: 8rpx;
  /* border-radius: 10rpx; */
}

.itemContainer {
  width: 694rpx;
  height: 420rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-bottom: 24rpx;
  border-radius: 10rpx;
  position: relative;
  background-color: white;
  box-shadow:1rpx 1rpx 3rpx #b3b1b1;

  display:flex;     
  justify-content: center; /*水平居中*/
  /* align-items:center;  */
}

.itemArticleText {
  width: 630rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  padding-left: 25rpx;
  padding-bottom: 10rpx;
  padding-right: 25rpx;
  padding-top: 20rpx;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  /* background-color: #000000;
  opacity:0.5;  */
  background:rgba(0,0,0,0.5); 
  /* border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx; */
  

  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 8rpx;
  margin-bottom: 10rpx;
}

.playIcon {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  margin-top: 120rpx;
}

.flowerBorder {
  width: 678rpx;
  height: 404rpx;
  position: absolute;
  margin: 8rpx;
  left: 0;
  top: 0;
}

.tips{
  width: 270rpx;
  height: 80rpx;
  position: fixed;
  right: 0;
  margin-right: 15rpx;
}